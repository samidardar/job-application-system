# Job Application System - Environment Variables
# Copy this file to .env and fill in your values

# User Information
USER_FULL_NAME=Sami
USER_EMAIL=your.email@example.com
USER_PHONE=+33XXXXXXXXX
USER_LINKEDIN=https://linkedin.com/in/yourprofile
USER_GITHUB=https://github.com/yourusername
USER_PORTFOLIO=https://yourportfolio.com

# Application Settings
DAILY_APPLICATION_LIMIT=30
MIN_RELEVANCE_SCORE=6.0
AUTO_APPLY=false

# Anti-Detection Settings
DELAY_MIN=3
DELAY_MAX=8
MAX_REQUESTS_PER_SESSION=30

# Dashboard Settings
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=5000
DASHBOARD_DEBUG=false

# Database
DATABASE_PATH=database/job_application.db

# Notification Settings (optional)
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your.email@gmail.com
# EMAIL_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=your.email@example.com

# Telegram Bot (optional)
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id
